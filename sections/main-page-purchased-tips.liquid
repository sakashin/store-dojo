{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width section-{{ section.id }}-padding">
  <div class="page-content">
  <h1 class="main-page-title page-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    {{ page.title | escape }}
  </h1>
  <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {%- unless customer -%}
        <p>ログイン頂きますと、こちらにご購入済の商品一覧が表示されます。</p>
    {%- else -%}
        {%- assign bought_product_ids = '' -%}
        {%- for tag in customer.tags -%}
            {%- if tag contains 'bought:' -%}
                {%- assign variant_id = tag | remove: 'bought:' -%}
                {%- assign bought_product_ids = bought_product_ids | append: ',' | append: variant_id -%}
            {%- endif -%}
        {%- endfor -%}
        {%- assign bought_product_ids = bought_product_ids | remove_first: ',' | split: ',' -%}
        {%- if bought_product_ids.size > 0 -%}
            {%- paginate collections.all.products by 1000 -%}
            {%- assign collections_all_products = collections.all.products -%}
            {%- endpaginate -%}
            <ul>
            {%- for bought_product_id in bought_product_ids -%}
                {%- assign int_bought_product_id = bought_product_id | plus: 0 -%}
                {% for product in collections_all_products %}
                    {% if product.id == bought_product_id %}
                        <li>
                            <a href="{{ product.url }}">{{ product.title }}</a>
                        </li>
                        {%- break -%}
                    {% endif %}
                {% endfor %}
            {%- endfor -%}
            </ul>
        {%- endif -%}
    {%- endunless -%}
  </div>
  </div>
</div>

{% schema %}
{
  "name": "購入済商品一覧",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
