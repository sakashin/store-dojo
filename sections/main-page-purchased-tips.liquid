{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width section-{{ section.id }}-padding">
  <div class="page-content">
  <h1 class="main-page-title page-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    {{ page.title | escape }}
  </h1>
  <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {%- unless customer -%}
        <p>ログイン頂きますと、こちらにご購入済の商品一覧が表示されます。</p>
    {%- else -%}
        {%- paginate customer.orders by 1000 -%}
          {%- for order in customer.orders -%}
            {{ order }}
          {%- endfor -%}
        {%- endpaginate -%}
        {%- assign bought_variant_ids = '' -%}
        {%- for tag in customer.tags -%}
            {%- if tag contains 'bought:' -%}
                {%- assign variant_id = tag | remove: 'bought:' -%}
                {%- assign bought_variant_ids = bought_variant_ids | append: ',' | append: variant_id -%}
            {%- endif -%}
        {%- endfor -%}
        {%- assign bought_variant_ids = bought_variant_ids | remove_first: ',' | split: ',' -%}
        {%- if bought_variant_ids.size > 0 -%}
            {%- assign collections_all_products = '' -%}
            <ul>
            {%- for bought_variant_id in bought_variant_ids -%}
                {%- assign int_bought_variant_id = bought_variant_id | plus: 0 -%}
                {%- assign is_variant = false -%}
                {% for product in collections.all.products %}
                    {%- if is_variant -%}
                        {%- break -%}
                    {%- endif -%}
                    {% for variant in product.variants %}
                      variant.id:{{ variant.id }}/int_bought_variant_id:{{ int_bought_variant_id }}
                        {% if variant.id == int_bought_variant_id %}
                            <li>
                                <a href="{{ product.url }}">{{ product.title }}</a>
                            </li>
                            {%- assign is_variant = true -%}
                            {%- break -%}
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            {%- endfor -%}
            </ul>
        {%- endif -%}
    {%- endunless -%}
  </div>
  </div>
</div>

{% schema %}
{
  "name": "購入済商品一覧",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
